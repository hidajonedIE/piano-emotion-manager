{
  "buildCommand": "pnpm run build && npx expo export --platform web --output-dir web-build",
  "installCommand": "pnpm install",
  "outputDirectory": "web-build",
  "framework": null,
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@5.5.16"
    }
  },
  "crons": [
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/reminders",
      "schedule": "0 8 * * *"
    }
  ]
}
